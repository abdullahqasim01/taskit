{
  "name": "taskit",
  "displayName": "TaskIt",
  "description": "A simple text based task list with the list view in vs code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "taskit",
        "extensions": [".taskit", ".taskit.txt"],
        "aliases": ["TaskIt"],
        "icon": {
          "dark": "./file-icons/taskit-icon.svg",
          "light": "./file-icons/taskit-icon.svg"
        }
      }
    ],
    "commands": [],
    "customEditors": [
      {
        "viewType": "taskit.taskitEditor",
        "displayName": "TaskIt Editor",
        "selector": [
          {
            "filenamePattern": "*.taskit"
          },
          {
            "filenamePattern": "*.taskit.txt"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build",
    "watch:webview": "vite build --watch",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  }
}

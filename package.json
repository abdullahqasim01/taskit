{
  "name": "todoit",
  "displayName": "Todoit",
  "description": "A simple text based task list with the list view in vs code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "galleryBanner": {
    "color": "#73d0ef",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://github.com/abdullahqasim01/todoit",
  "bugs": {
    "url": "https://github.com/abdullahqasim01/todoit/issues",
    "email": "contact@abdullahqasim.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abdullahqasim01/todoit.git"
  },
  "keywords": [
    "todoit",
    "todo list",
    "tasks list",
    "todo tracker",
    "tasks tracker"
  ],
  "publisher": "abdullahqasim",
  "author": {
    "name": "Abdullah Qasim",
    "email": "contact@abdullahqasim.me",
    "url": "https://abdullahqasim.me"
  },
  "icon": "images/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "todoit",
        "extensions": [
          ".todoit",
          ".todoit.txt"
        ],
        "aliases": [
          "Todoit"
        ],
        "icon": {
          "dark": "./images/todoit-icon.svg",
          "light": "./images/todoit-icon.svg"
        }
      }
    ],
    "commands": [],
    "customEditors": [
      {
        "viewType": "todoit.todoitEditor",
        "displayName": "Todoit Editor",
        "selector": [
          {
            "filenamePattern": "*.todoit"
          },
          {
            "filenamePattern": "*.todoit.txt"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "vite build",
    "watch:webview": "vite build --watch",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.25.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "lightningcss": "^1.30.1"
  }
}
